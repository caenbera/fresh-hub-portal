
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthed() {
      return request.auth != null;
    }

    // Helper function to get the role from the user's profile document
    function getUserRole(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }

    // Helper function to check for admin roles
    function isAdmin() {
      return isAuthed() && (getUserRole(request.auth.uid) == 'admin' || getUserRole(request.auth.uid) == 'superadmin');
    }
    
    function isSuperAdmin() {
      return isAuthed() && getUserRole(request.auth.uid) == 'superadmin';
    }

    // USERS Collection
    match /users/{userId} {
      // Any authenticated user can create their own user profile document
      allow create: if isAuthed() && request.auth.uid == userId;
      
      // Users can only read their own data, superadmins can read anyone's
      allow read: if isAuthed() && (request.auth.uid == userId || isSuperAdmin());
      
      // Users can only update their own data, but superadmins can update anyone's role
      allow update: if isAuthed() && (request.auth.uid == userId || (isSuperAdmin() && 'role' in request.resource.data));
      
      // Only superadmins can delete users
      allow delete: if isSuperAdmin();
    }

    // PRODUCTS Collection
    match /products/{productId} {
      // Any authenticated user (client) can read products
      allow read: if isAuthed();
      
      // Only admins and superadmins can create, update, or delete products
      allow write: if isAdmin();
    }

    // ORDERS Collection
    match /orders/{orderId} {
      // Users can create their own orders
      allow create: if isAuthed() && request.resource.data.userId == request.auth.uid;
      
      // Users can read their own orders. Admins can read all orders.
      allow read: if isAuthed() && ((resource.data.userId == request.auth.uid) || isAdmin());
      
      // Admins can update orders (e.g., change status)
      allow update: if isAdmin();
      
      // Only admins can delete orders
      allow delete: if isAdmin();
    }
    
    // SUPPLIERS Collection
    match /suppliers/{supplierId} {
      // Admins and superadmins can read, create, update, and delete suppliers.
      allow read, write: if isAdmin();
    }

    // ADMIN INVITES Collection
    match /adminInvites/{email} {
      // Only Super Admins can create or read invites
      allow create, read: if isSuperAdmin();

      // Nobody can update or delete invites through the client, they are single-use
      allow update, delete: if false;
    }
  }
}
