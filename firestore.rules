
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read and update their own profile
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Authenticated users can read products
    match /products/{productId} {
      allow read: if request.auth != null;
      // Only admins/superadmins can create, update, or delete products (future rule)
      allow write: if false; // Temporarily lock down writes until roles work
    }

    // Users can create and read their own orders
    match /orders/{orderId} {
       allow read, create: if request.auth.uid == request.resource.data.userId;
       // Only admins/superadmins can update orders (e.g., change status)
       allow update: if false; // Temporarily lock down updates until roles work
    }

    // SPECIAL RULE for Super Admin setup
    // Only the specific superadmin email can write to this collection
    match /admin_role_requests/{userId} {
      allow create: if request.auth.uid == userId && request.auth.token.email == "superadmin@thefreshhub.com";
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
