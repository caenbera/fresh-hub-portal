
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthed() {
      return request.auth != null;
    }

    // Helper function to check for admin roles.
    function isAdmin() {
      if (!isAuthed()) {
        return false;
      }
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc.exists == true && userDoc.data.role in ['admin', 'superadmin'];
    }
    
    // Helper function to check for superadmin role.
    function isSuperAdmin() {
       if (!isAuthed()) {
        return false;
      }
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc.exists == true && userDoc.data.role == 'superadmin';
    }

    // USERS Collection
    match /users/{userId} {
      allow create: if isAuthed() && request.auth.uid == userId;
      
      allow read: if isAuthed() && (request.auth.uid == userId || isSuperAdmin());
      
      // Users can update their own data.
      // Superadmins can update only the 'role' field of other users.
      allow update: if isAuthed() && 
                    (request.auth.uid == userId || 
                    (isSuperAdmin() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['role'])));
      
      allow delete: if isSuperAdmin();
    }

    // PRODUCTS Collection
    match /products/{productId} {
      allow read: if isAuthed();
      allow write: if isAdmin();
    }

    // ORDERS Collection
    match /orders/{orderId} {
      allow create: if isAuthed() && request.resource.data.userId == request.auth.uid;
      allow read: if isAuthed() && (resource.data.userId == request.auth.uid || isAdmin());
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // SUPPLIERS Collection
    match /suppliers/{supplierId} {
      // Admins and superadmins need to be able to read and write.
      allow read, write: if isAdmin();
    }
    
    // BRANCHES sub-collection inside USERS
    match /users/{userId}/branches/{branchId} {
        // A user can manage their own branches.
        allow read, write: if isAuthed() && request.auth.uid == userId;
    }

    // ADMIN INVITES Collection
    match /adminInvites/{email} {
      allow create, read: if isSuperAdmin();
      allow update, delete: if false;
    }
  }
}
